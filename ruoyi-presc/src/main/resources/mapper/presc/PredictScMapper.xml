<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.presc.mapper.PredictScMapper">
    
    <resultMap type="PredictSc" id="PredictScResult">
        <result property="major"    column="major"    />
        <result property="score"    column="score"    />
    </resultMap>

    <sql id="selectPredictScVo">
        select major, score from predict_sc
    </sql>

    <select id="selectPredictScList" parameterType="PredictSc" resultMap="PredictScResult">
        <include refid="selectPredictScVo"/>
        <where>  
            <if test="major != null  and major != ''"> and major = #{major}</if>
            <if test="score != null  and score != ''"> and score = #{score}</if>
        </where>
    </select>
    
    <select id="selectPredictScByMajor" parameterType="String" resultMap="PredictScResult">
        <include refid="selectPredictScVo"/>
        where major = #{major}
    </select>
        
    <insert id="insertPredictSc" parameterType="PredictSc">
        insert into predict_sc
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="major != null">major,</if>
            <if test="score != null">score,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="major != null">#{major},</if>
            <if test="score != null">#{score},</if>
         </trim>
    </insert>

    <update id="updatePredictSc" parameterType="PredictSc">
        update predict_sc
        <trim prefix="SET" suffixOverrides=",">
            <if test="score != null">score = #{score},</if>
        </trim>
        where major = #{major}
    </update>

    <delete id="deletePredictScByMajor" parameterType="String">
        delete from predict_sc where major = #{major}
    </delete>

    <delete id="deletePredictScByMajors" parameterType="String">
        delete from predict_sc where major in 
        <foreach item="major" collection="array" open="(" separator="," close=")">
            #{major}
        </foreach>
    </delete>

</mapper>