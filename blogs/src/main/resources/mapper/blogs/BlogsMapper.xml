<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pgs.blogs.mapper.BlogsMapper">
    
    <resultMap type="Blogs" id="BlogsResult">
        <result property="id"    column="id"    />
        <result property="username"    column="username"    />
        <result property="title"    column="title"    />
        <result property="content"    column="content"    />
        <result property="likes"    column="likes"    />
        <result property="createAt"    column="create_at"    />
    </resultMap>

    <sql id="selectBlogsVo">
        select id, username, title, content, likes, create_at from blogs
    </sql>

    <select id="selectBlogsList" parameterType="Blogs" resultMap="BlogsResult">
        <include refid="selectBlogsVo"/>
        <where>  
            <if test="id != null "> and id = #{id}</if>
            <if test="title != null  and title != ''"> and title = #{title}</if>
            <if test="content != null  and content != ''"> and content = #{content}</if>
            <if test="likes != null  and likes != ''"> and likes = #{likes}</if>
            <if test="createAt != null  and createAt != ''"> and create_at = #{createAt}</if>
        </where>
    </select>
    
    <select id="selectBlogsById" parameterType="Long" resultMap="BlogsResult">
        <include refid="selectBlogsVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertBlogs" parameterType="Blogs">
        insert into blogs
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="username != null">username,</if>
            <if test="title != null">title,</if>
            <if test="content != null">content,</if>
            <if test="likes != null">likes,</if>
            <if test="createAt != null">create_at,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="username != null">#{username},</if>
            <if test="title != null">#{title},</if>
            <if test="content != null">#{content},</if>
            <if test="likes != null">#{likes},</if>
            <if test="createAt != null">#{createAt},</if>
         </trim>
    </insert>

    <update id="updateBlogs" parameterType="Blogs">
        update blogs
        <trim prefix="SET" suffixOverrides=",">
            <if test="username != null">username = #{username},</if>
            <if test="title != null">title = #{title},</if>
            <if test="content != null">content = #{content},</if>
            <if test="likes != null">likes = #{likes},</if>
            <if test="createAt != null">create_at = #{createAt},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBlogsById" parameterType="Long">
        delete from blogs where id = #{id}
    </delete>

    <delete id="deleteBlogsByIds" parameterType="String">
        delete from blogs where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>