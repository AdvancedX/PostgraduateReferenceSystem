<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pgs.school.mapper.SchoolInfoMapper">
    
    <resultMap type="SchoolInfo" id="SchoolInfoResult">
        <result property="id"    column="id"    />
        <result property="school"    column="school"    />
        <result property="schooltype"    column="schooltype"    />
        <result property="region"    column="region"    />
    </resultMap>

    <sql id="selectSchoolInfoVo">
        select id, school, schooltype, region from school_info
    </sql>

    <select id="selectSchoolInfoList" parameterType="SchoolInfo" resultMap="SchoolInfoResult">
        <include refid="selectSchoolInfoVo"/>
        <where>  
            <if test="school != null  and school != ''"> and school = #{school}</if>
            <if test="schooltype != null  and schooltype != ''"> and schooltype like concat('%', #{schooltype}, '%')</if>
            <if test="region != null  and region != ''"> and region = #{region}</if>
        </where>
    </select>
    
    <select id="selectSchoolInfoById" parameterType="String" resultMap="SchoolInfoResult">
        <include refid="selectSchoolInfoVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertSchoolInfo" parameterType="SchoolInfo" useGeneratedKeys="true" keyProperty="id">
        insert into school_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="school != null">school,</if>
            <if test="schooltype != null">schooltype,</if>
            <if test="region != null">region,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="school != null">#{school},</if>
            <if test="schooltype != null">#{schooltype},</if>
            <if test="region != null">#{region},</if>
         </trim>
    </insert>

    <update id="updateSchoolInfo" parameterType="SchoolInfo">
        update school_info
        <trim prefix="SET" suffixOverrides=",">
            <if test="school != null">school = #{school},</if>
            <if test="schooltype != null">schooltype = #{schooltype},</if>
            <if test="region != null">region = #{region},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteSchoolInfoById" parameterType="String">
        delete from school_info where id = #{id}
    </delete>

    <delete id="deleteSchoolInfoByIds" parameterType="String">
        delete from school_info where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>